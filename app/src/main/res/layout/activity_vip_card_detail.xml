<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <include layout="@layout/common_top_bar_layout_with_backbtn" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fafafa"
        android:orientation="vertical"
        android:paddingBottom="12dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/card_number_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卡   号："
                android:textColor="#999999"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/card_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff2727"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/level_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="等   级："
                android:textColor="#999999"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff2727"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/money_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="余   额："
                android:textColor="#999999"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff2727"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/points_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可用积分："
                android:textColor="#999999"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff2727"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d6d6d6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f2f2"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/consume_detail_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <TextView
                android:id="@+id/consume_detail_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消费明细"
                android:textColor="#999999"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp" />

            <TextView
                android:id="@+id/consume_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="60dp"
                android:text="100笔"
                android:textColor="#ffffff"
                android:background="@drawable/corner_red_bg"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:visibility="gone"
                android:paddingRight="10dp"
                android:layout_toRightOf="@+id/consume_detail_tips"
                android:layout_marginLeft="80dp" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="18dp" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d6d6d6" />

        <RelativeLayout
            android:id="@+id/available_service_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <TextView
                android:id="@+id/available_service_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可用服务"
                android:textColor="#999999"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp" />

            <TextView
                android:id="@+id/available_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="60dp"
                android:text="2"
                android:textColor="#ffffff"
                android:background="@drawable/corner_green_bg"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="gone"
                android:layout_toRightOf="@+id/available_service_tips"
                android:layout_marginLeft="80dp" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="18dp" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d6d6d6" />

    </LinearLayout>

</LinearLayout>
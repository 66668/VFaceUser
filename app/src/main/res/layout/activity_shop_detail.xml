<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/bg"
    android:layout_height="match_parent">

    <include layout="@layout/common_top_bar_layout_with_backbtn" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fafafa">

        <TextView
            android:id="@+id/shop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="18sp"
            android:text=""
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_toLeftOf="@+id/call_btn"
            android:layout_toStartOf="@+id/call_btn" />

        <TextView
            android:id="@+id/shop_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textColor="#999999"
            android:layout_below="@+id/shop_name"
            android:layout_alignLeft="@+id/shop_name"
            android:layout_toLeftOf="@+id/call_btn"
            android:layout_toStartOf="@+id/call_btn"
            android:layout_marginTop="9dp" />

        <TextView
            android:id="@+id/business_type_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textColor="#999999"
            android:layout_below="@+id/shop_phone"
            android:layout_toLeftOf="@+id/call_btn"
            android:layout_toStartOf="@+id/call_btn"
            android:layout_alignLeft="@+id/shop_phone"
            android:layout_marginTop="9dp" />

        <TextView
            android:id="@+id/shop_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textColor="#999999"
            android:layout_below="@+id/business_type_name"
            android:layout_toLeftOf="@+id/call_btn"
            android:layout_toStartOf="@+id/call_btn"
            android:layout_alignLeft="@+id/business_type_name"
            android:layout_marginTop="9dp" />

        <ImageButton
            android:id="@+id/call_btn"
            android:layout_width="40dp"
            android:scaleType="fitXY"
            android:layout_height="40dp"
            android:src="@drawable/icon_call"
            android:background="@null"
            android:layout_alignParentRight="true"
            android:layout_marginTop="35dp"
            android:layout_marginRight="24dp" />

        <TextView
            android:id="@+id/check_map_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:text="查看地图"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:gravity="center"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:layout_below="@+id/shop_address"
            android:background="@drawable/shop_detail_call_btn_bg"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="11dp"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d6d6d6"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="商家介绍"
        android:textColor="#333333"
        android:textSize="18sp"
        android:paddingTop="18dp"
        android:paddingLeft="24dp"
        android:background="#f3f3f3"
        />

    <TextView
        android:id="@+id/shop_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#999999"
        android:textSize="16sp"
        android:paddingTop="10dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingBottom="10dp"
        android:background="#f3f3f3"
        />

</LinearLayout>
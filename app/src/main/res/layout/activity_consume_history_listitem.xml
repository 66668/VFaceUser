<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#fafafa"
    android:paddingTop="22dp"
    android:paddingLeft="13dp"
    android:paddingBottom="19dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:textSize="14sp"
        android:text="客户："
        />

    <TextView
        android:id="@+id/shopType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_name"
        android:layout_marginTop="8dp"
        android:gravity="left"
        android:textColor="#666666"
        android:textSize="12sp"
        />
    
    <TextView
        android:id="@+id/serial_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/user_name"
        android:layout_alignTop="@+id/user_name"
        android:layout_toEndOf="@+id/user_name"
        android:layout_toLeftOf="@+id/right_icon"
        android:layout_toRightOf="@+id/user_name"
        android:gravity="center_vertical|right"
        android:text="流水号："
        android:textColor="#666666"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/expenseType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="快速消费"
        android:layout_below="@id/serial_number"
        android:layout_toLeftOf="@+id/right_icon"
        android:layout_marginTop="8dp"
        android:gravity="right"
        android:textColor="#666666"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_name"
        android:text=""
        android:textSize="14sp"
        android:layout_alignBaseline="@+id/yuan"
        />


    <TextView
        android:id="@+id/money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#ff2727"
        android:textSize="16sp"
        android:layout_toLeftOf="@+id/yuan"
        android:layout_alignBottom="@+id/yuan"
        />

    <TextView
        android:id="@+id/yuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="元"
        android:textColor="#ff2727"
        android:textSize="16sp"
        android:layout_alignRight="@+id/serial_number"
        android:layout_below="@+id/expenseType"
        android:layout_marginTop="8dp"
        />

    <ImageView
        android:id="@+id/right_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/right"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="14dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />

</RelativeLayout>
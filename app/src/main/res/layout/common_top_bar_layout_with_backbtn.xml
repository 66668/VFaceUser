<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/common_topbar_height">

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@null"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/back" />

    <TextView
        android:id="@+id/title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/app_name"
        android:gravity="center"
        android:singleLine="true"
        android:paddingLeft="@dimen/common_topbar_height"
        android:paddingRight="@dimen/common_topbar_height"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/font_size_common_title" />

    <ImageButton
        android:id="@+id/top_right_btn"
        android:layout_width="@dimen/common_topbar_height"
        android:layout_height="@dimen/common_topbar_height"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:src="@drawable/icon_done"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/bar_line"></View>

</RelativeLayout>